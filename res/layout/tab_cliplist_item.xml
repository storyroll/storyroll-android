<?xml version="1.0" encoding="utf-8"?>
<com.storyroll.ui.ClipListItemView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
   
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
	     android:paddingTop="10dp"
         android:layout_marginTop="0dp">
         
	    <ImageView 
	        android:id="@+id/videoThumb"
	        android:layout_gravity="center_horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:visibility="visible"
	        />

    
	    <com.storyroll.ui.ControlledClipView
	        android:id="@+id/videoPlayerView"
	        android:layout_gravity="center_horizontal"
	        android:visibility="invisible"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	         />
	    <!-- The playable indicator shall stay above all visible elements -->
	    <ImageView 
	        android:id="@+id/playControl"
	       	android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
			android:visibility="visible"
			android:src="@drawable/ic_play_roll"
			android:alpha="0.8"
	    />
	    <ImageView
            android:id="@+id/unseenIndicator"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_play_roll_new"
            android:visibility="invisible" 
            android:contentDescription="New"
            android:alpha="0.5"
        />

	    <ProgressBar 
			android:id="@+id/progress"	
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_gravity="center"
		/>
  	</FrameLayout>

    <ImageButton 
        android:id="@+id/replyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_action_join"
        android:background="@color/sr_bg_actionbar"
        android:layout_gravity="right"/>

  	<FrameLayout 
  	    android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	android:layout_gravity="center_horizontal"
	  	android:layout_marginBottom="10dp">
  	</FrameLayout>
</com.storyroll.ui.ClipListItemView>
