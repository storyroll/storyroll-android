<?xml version="1.0" encoding="utf-8"?>
<com.storyroll.ui.PlaylistItemView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
   
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="0dp">
         
	    <ImageView 
	        android:id="@+id/storyThumb"
	        android:layout_gravity="center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:visibility="visible"
	        />
	    <ImageView
            android:id="@+id/unseenIndicator"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_new_roll"
            android:visibility="invisible" 
            android:contentDescription="New"
            android:alpha="0.5"
        />
    
	    <com.storyroll.ui.ControlledVideoView
	        android:id="@+id/videoPlayerView"
	        android:layout_gravity="center"
	        android:visibility="invisible"
	        android:layout_width="match_parent"
	        android:layout_height="300dp"
	         />
	    <!-- The playable indicator shall stay above all visible elements -->
	    <ImageView 
	        android:id="@+id/playControl"
	       	android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
			android:visibility="visible"
			android:src="@drawable/ic_play_roll"
			android:alpha="0.8"
	    />

	    <ProgressBar 
			android:id="@+id/progress"	
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_gravity="center"
		/>
  	</FrameLayout>

  	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
    
	    <TextView 
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:text="@string/cast"
	        android:textColor="@color/sr_cast_text"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:gravity="right|center_vertical"
	   />

	  <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:paddingLeft="0dp"
	        android:paddingRight="0dp"
	        android:paddingBottom="3dp"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:layout_weight="2"
	        >
	
	        <com.storyroll.ui.RoundedImageView
	            android:id="@+id/cast1"
	            android:layout_height="40dp"
	            android:layout_width="40dp"
	            android:visibility="gone"
	            app:corner_radius="20dp"
	            app:round_background="false"
	            app:is_oval="true"
	            android:layout_marginRight="3dp"
	            android:layout_marginLeft="3dp"
	            />
	        <com.storyroll.ui.RoundedImageView
	            
	            android:id="@+id/cast2"
	            android:layout_height="40dp"
	            android:layout_width="40dp"
	            android:visibility="gone"
	            app:corner_radius="20dp"
	            app:round_background="false"
	            app:is_oval="true"
	          	android:layout_marginRight="3dp"
	            />
	        <com.storyroll.ui.RoundedImageView
	            android:id="@+id/cast3"
	            android:layout_height="40dp"
	            android:layout_width="40dp"
	            android:visibility="gone"
	            app:corner_radius="20dp"
	            app:round_background="false"
	            app:is_oval="true"
	            android:layout_marginRight="3dp"

	            />
	        <!-- <ImageView
	            android:id="@+id/cast4"
	            android:layout_height="60dp"
	            android:layout_width="60dp"
	            android:layout_toRightOf="@id/cast3"
	            android:layout_alignParentTop="true"
	            android:paddingRight="10px"
	            android:visibility="gone"/>
	        <ImageView
	            android:id="@+id/cast5"
	            android:layout_height="60dp"
	            android:layout_width="60dp"
	            android:layout_alignParentTop="true"
	            android:layout_toRightOf="@id/cast4"
	            android:paddingRight="10px"
	            android:visibility="gone"/> -->
       </LinearLayout>
	       
       <TextView 
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:text=" "
      />   
    </LinearLayout>
    
  	<!-- SEPARATOR -->
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/sr_bg_separator"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginBottom="15dp"
    />
    
    <LinearLayout 
        android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginBottom="20dp"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
        >
	        <ImageView 
		   	    android:id="@+id/likeImage"
		   	    android:layout_height="wrap_content"
		   	    android:layout_width="wrap_content"
		   	    android:src="@drawable/ic_star_off"
		   	    android:layout_marginRight="10dp"
	   	    />
	        <TextView
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:textColor="#464646"
		        android:textSize="20sp"
		        android:text="LIKES: "
		    />
	        <TextView
		   	    android:id="@+id/numLikes"
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:textColor="@color/sr_bg_actionbar"
		        android:textSize="20sp"
		    />
        </LinearLayout>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top|right"
            android:text="..."
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#464646"
            android:layout_weight="1"
            />
    </LinearLayout>
  	<FrameLayout 
  	    android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	android:layout_gravity="center_horizontal"
	  	android:layout_marginBottom="10dp">

   	
  	</FrameLayout>
  	


</com.storyroll.ui.PlaylistItemView>
