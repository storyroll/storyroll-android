<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Header  Starts -->

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_bg" >

        <TextView
            android:id="@+id/tvheader"
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="Contacts" />

        <ImageView
            android:id="@+id/doneSelect"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_bg"
            android:contentDescription="@string/app_name"
            android:src="@drawable/done_white" />
    </RelativeLayout>
    <!-- Header Ends -->

    <EditText
        android:id="@+id/search_txt"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"
        android:drawableRight="@drawable/edit_search"
        android:inputType="textNoSuggestions"
        android:singleLine="true" />

    <ListView
        android:id="@+id/contactList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_txt"
        android:background="@color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="true" />

    <!--<TextView android:id="@android:id/empty"-->
              <!--android:layout_width="match_parent"-->
              <!--android:layout_height="match_parent"-->
              <!--android:layout_toEndOf="@id/contactList"-->
              <!--android:text="No contacts loaded (yet)..."/>-->


    <!--style="@android:style/Widget.ProgressBar.Large"-->

    <ProgressBar
            android:id="@+id/progress"

            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:visibility="gone"/>

    <!--<include layout="@layout/progress_dialog_custom" />-->

</RelativeLayout>