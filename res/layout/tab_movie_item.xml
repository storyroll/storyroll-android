<?xml version="1.0" encoding="utf-8"?>
<co.storyroll.ui.MovieItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
   
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
	     android:paddingTop="10dp"
	     android:paddingBottom="10dp"
	     android:paddingLeft="10dp"
         android:layout_marginTop="0dp">
         
	    <ImageView 
	        android:id="@+id/videoThumb"
	        android:layout_centerInParent="true"
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
			android:visibility="visible"
			android:layout_alignParentTop="true"
	        />

    
	    <co.storyroll.ui.ControlledMovieView
	        android:id="@+id/videoPlayerView"
	        android:layout_centerInParent="true"
	        android:visibility="invisible"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	         />
	    <!-- The playable indicator shall stay above all visible elements -->
	    <ImageView 
	        android:id="@+id/playControl"
	       	android:layout_gravity="center_horizontal"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
			android:visibility="visible"
			android:src="@drawable/ic_play_roll"
			android:alpha="0.8"
			android:layout_alignParentTop="true"
			android:layout_centerInParent="true"
	    />
	    <ImageView
            android:id="@+id/unseenIndicator"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_play_roll_new"
            android:visibility="invisible" 
            android:contentDescription="New"
            android:alpha="0.5"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
        />

	    <ProgressBar 
			android:id="@+id/progress"	
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_gravity="center"
			android:layout_centerInParent="true"
			android:layout_alignParentTop="true"
		/>
  	</FrameLayout>

      	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    >
    
      	<TextView
      	    android:id="@+id/ageText" 
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:textColor="@color/sr_cast_text"
	        android:textSize="12sp"
	        android:textStyle="italic"
	        android:layout_weight="1"
	        android:gravity="left|center_vertical"
	   />
	    <TextView 
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:text="@string/cast"
	        android:textColor="@color/sr_cast_text"
	        android:textSize="12sp"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:gravity="right|center_vertical"
	   />

	  <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:paddingLeft="0dp"
	        android:paddingRight="0dp"
	        android:paddingBottom="3dp"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:layout_weight="3"
	        >
	
	        <co.storyroll.ui.RoundedImageView
	            android:id="@+id/cast1"
	            android:layout_height="40dp"
	            android:layout_width="40dp"
	            android:visibility="gone"
	            app:corner_radius="20dp"
	            app:round_background="false"
	            app:is_oval="true"
	            android:layout_marginRight="3dp"
	            android:layout_marginLeft="3dp"
	            android:alpha="0.6"
	            />
	        <co.storyroll.ui.RoundedImageView
	            
	            android:id="@+id/cast2"
	            android:layout_height="40dp"
	            android:layout_width="40dp"
	            android:visibility="gone"
	            app:corner_radius="20dp"
	            app:round_background="false"
	            app:is_oval="true"
	          	android:layout_marginRight="3dp"
	          	android:alpha="0.6"
	            />
	        <co.storyroll.ui.RoundedImageView
	            android:id="@+id/cast3"
	            android:layout_height="40dp"
	            android:layout_width="40dp"
	            android:visibility="gone"
	            app:corner_radius="20dp"
	            app:round_background="false"
	            app:is_oval="true"
	            android:layout_marginRight="3dp"
	            android:alpha="0.6"

	            />
			<TextView
			    android:id="@+id/cast_more"
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:textColor="@color/sr_cast_text"
		        android:textSize="16sp"
		        android:textStyle="normal"
		        android:gravity="center_vertical"
		        android:visibility="gone"
		   />
       </LinearLayout>
	       
	  <!--
       <TextView 
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:text=" "
      />
      -->
       
       <FrameLayout
           android:layout_height="wrap_content"
           android:layout_width="0dp"
           android:layout_weight="1">
           <ImageButton 
	        android:id="@+id/replyButton"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:src="@drawable/ic_action_join"
	        android:background="@drawable/rounded_corners"
	        android:layout_gravity="right|center_vertical"/>
       </FrameLayout>
           
           
    </LinearLayout>
    
  	<!-- SEPARATOR -->
    <View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/sr_bg_separator"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginBottom="15dp"
    />

    <LinearLayout 
        android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginBottom="20dp"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
        >
	        <ImageView 
		   	    android:id="@+id/likeImage"
		   	    android:layout_height="wrap_content"
		   	    android:layout_width="wrap_content"
		   	    android:src="@drawable/ic_star_off"
		   	    android:layout_marginRight="10dp"
	   	    />
	        <TextView
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:textColor="#464646"
		        android:textSize="20sp"
		        android:text="LIKES: "
		    />
	        <TextView
		   	    android:id="@+id/numLikes"
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:textColor="@color/sr_bg_actionbar"
		        android:textSize="20sp"
		    />
        </LinearLayout>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top|right"
            android:text="..."
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#464646"
            android:layout_weight="1"
            android:visibility="invisible"
            />
    </LinearLayout>
    
  	<FrameLayout 
  	    android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	android:layout_gravity="center_horizontal"
	  	android:layout_marginBottom="10dp">
  	</FrameLayout>
</co.storyroll.ui.MovieItemView>
