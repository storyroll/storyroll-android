<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="SRBaseTheme" parent="@android:style/Theme.Holo.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
        <item name="android:windowActionBar">false</item>
		<item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    

    
    <style name="SRTheme" parent="SRBaseTheme">
        <item name="android:actionBarStyle">@style/SRActionBar</item>
<!--         <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle</item> 
        <item name="android:actionBarTabTextStyle">@style/Widget.MyTabText</item> -->
    </style>

    <style name="SRActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/sr_bg_actionbar</item>
        <item name="android:actionMenuTextAppearance">@style/SRActionBar.MenuTextStyle</item>
        <item name="android:titleTextStyle">@style/SRActionBar.TitleTextStyle</item>
        <!--  item name="android:icon">@drawable/ic_icon_custom</item -->
        <item name="android:displayOptions">showHome|useLogo|showCustom</item>
    </style>
    
    <style name="SRActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
	    <item name="android:textColor">@color/sr_text_ab</item>
	</style>
	
	<style name="SRActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
	    <item name="android:textColor">#FFF</item>
	</style>

	
	<!-- ViewPagerIndicator -->
	<style name="SRThemeStyledTabs" parent="SRTheme">
	    <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle</item> 
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle</item>
	</style>
    	
	<!-- Custom Action Bar tab style  -->
	
	<!-- Defines a style resource for tabs in the action bar. -->
	<style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
	    <item name="android:headerDividersEnabled">true</item>
	    <item name="android:background">@drawable/sr_tab_indicator</item>
	    <item name="android:paddingLeft">6dp</item>
    	<item name="android:paddingRight">6dp</item>
	    <!--  item name="android:background">#464646</item -->
	</style>
	
	<!-- Defines a style resource for the thin bar that appears below the navigation tabs. -->
	<style name="ActionBarTabBarStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar">
	     <item name="android:background">@color/sr_actionbar_tab_bg</item>
	     <item name="android:dividerPadding">8dp</item>
	</style>
	
	<!-- Defines a style resource for text in the navigation tabs. -->
	<style name="ActionBarTabTextStyle" parent="android:Widget.Holo.Light.ActionBar.TabText.Inverse">
    	<item name="android:textSize">12sp</item>
    	<item name="android:textColor">@color/sr_actionbar_tab_text</item>
	</style>
	
	<style name="FullScreenDialog">
	    <item name="android:windowFrame">@null</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
	    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
		<item name="android:windowTitleSize">0dp</item>
		
		<item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	
	
	    <!-- No backgrounds, titles or window float -->
	    <item name="android:windowBackground">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
	</style>
	<!--  Generated  -->
	
</resources>
